<div class="edit-comment-container">
  <h5>Edit Comment:</h5>
  <form class="edit-answer-comment" action="/answers/<%= @answer.id %>/comments/<%= @comment.id %>" method="post">
    <input type="hidden" name="_method" value="PUT">
    <input type="text" name="text" placeholder="<%= @comment.text %>">
    <input class="button" type="submit" value="Edit">
  </form>
</div>
