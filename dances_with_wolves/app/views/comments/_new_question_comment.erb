<% if @errors %>
  <%= erb :_errors, layout: false, locals: {errors: @errors} %>
<% end %>


  <form class="question-comment-form" action="/questions/<%= @question.id %>/comments" method="post">
    <input type="hidden" name="username" value="<%= logged_in_user.username %>">
    <label for="comment">Comment:</label>
    <input type="text" id="comment-text" name="text" placeholder="Comment">
    <input type="submit" id="post-new-question-comment-button" value="Post Comment">
  </form>
