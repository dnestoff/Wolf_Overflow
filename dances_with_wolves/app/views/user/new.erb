<div id="container">
  <h1>Register for WolfOverflow</h1>
  <% if @registration_error %>
    <p><%= @registration_error %></p>
  <% end %>
  <form action="/users" method="post">
    <input type="text" name="user_registration[username]" placeholder="Username">
    <input type="email" name="user_registration[email]" placeholder="Email">
    <input type="password" name="user_registration[password]" placeholder="Password">
    <input type="submit" value="Register">
  </form>
</div>
